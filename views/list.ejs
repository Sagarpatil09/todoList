<%- include("header") -%>
  <div class="box " id="heading">
    <h1><%= header %></h1>
  </div>

  <div class="box">
      <% newListItems.forEach((item) => { %>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="checkbox" onchange="this.form.submit()" value="<%= item._id %>"></input>
            <p><%= item.name %></p>
          </div>
          <input type="hidden" name="listName" value="<%= header %>"></input>
        </form>

      <% }) %>
      <form class="item" action="/" method="post">
        <input type="text" name="newItem"  placeholder="New Item" autocomplete="off" required>
        <button type="submit" name="list" value="<%= header %>">+</button>
      </form>

  </div>

<%- include("footer") -%>
